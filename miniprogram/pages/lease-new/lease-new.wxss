/* ===== ACCESSIBILITY ENHANCEMENTS ===== */
/* Focus States */
.nav-button:focus,
.van-uploader__upload:focus,
.van-field__control:focus {
  outline: 2px solid var(--primary-color);
  outline-offset: 2px;
}

