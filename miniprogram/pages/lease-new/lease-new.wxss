@media (prefers-color-scheme: dark) {
  /* This can be expanded when dark mode is implemented */
  page {
    background-color: #1a1a1a;
  }
}

/* ===== ENHANCED VISUAL CUES AND ICONS ===== */
/* Step Success Indicators */
.step-success-indicator {
  margin-top: 2px;
}

/* Button Text Styling */
.button-text {
  margin-left: var(--space-xs);
  font-weight: 500;
}

/* Progress Dots for Button State */
.progress-dots {
  display: flex;
  gap: 2px;
  margin-left: var(--space-xs);
}

.dot {
  width: 4px;
  height: 4px;
  border-radius: 50%;
  background-color: var(--text-tertiary);
  transition: var(--transition-normal);
}

.dot--completed {
  background-color: var(--success-color);
  animation: dotPulse 1s ease-in-out;
}

.dot--pending {
  background-color: var(--warning-color);
}

@keyframes dotPulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.2); }
  100% { transform: scale(1); }
}

/* Checklist Indicator */
.checklist-indicator {
  display: flex;
  gap: 2px;
  margin-left: var(--space-xs);
}

/* Ready Indicator Animation */
.ready-indicator {
  margin-left: var(--space-xs);
  animation: readyBounce 2s infinite;
}

@keyframes readyBounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-3px); }
  60% { transform: translateY(-2px); }
}

/* Error Breakdown */
.error-breakdown {
  padding: var(--space-sm) var(--space-lg);
  background-color: rgba(238, 10, 36, 0.05);
  border-radius: var(--radius-sm);
  margin-top: var(--space-sm);
}

.error-item {
  display: flex;
  align-items: center;
  margin-bottom: var(--space-xs);
}

.error-item:last-child {
  margin-bottom: 0;
}

.error-text {
  font-size: var(--font-sm);
  color: var(--danger-color);
  margin-left: var(--space-xs);
  font-weight: 500;
}

/* Completion Indicator */
.completion-indicator {
  margin-left: var(--space-sm);
}

.completion-bar {
  width: 40px;
  height: 3px;
  background-color: var(--border-light);
  border-radius: 2px;
  overflow: hidden;
}

.completion-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--warning-color) 0%, var(--success-color) 100%);
  transition: var(--transition-slow);
  border-radius: 2px;
}

/* Upload Status Badge */
.upload-status-badge {
  margin-left: auto;
}

/* Enhanced Tag Styling with Icons */
.van-tag {
  display: inline-flex;
  align-items: center;
  gap: 2px;
  font-weight: 500;
}

/* Status Indicators with Animations */
.status-indicator {
  display: inline-flex;
  align-items: center;
  gap: var(--space-xs);
  padding: 2px 6px;
  border-radius: var(--radius-sm);
  font-size: var(--font-xs);
  font-weight: 500;
}

.status-indicator--success {
  background-color: rgba(7, 193, 96, 0.1);
  color: var(--success-color);
  animation: successGlow 2s ease-in-out;
}

.status-indicator--warning {
  background-color: rgba(255, 151, 106, 0.1);
  color: var(--warning-color);
  animation: warningPulse 2s infinite;
}

.status-indicator--error {
  background-color: rgba(238, 10, 36, 0.1);
  color: var(--danger-color);
  animation: errorShake 0.5s ease-in-out;
}

@keyframes successGlow {
  0% { box-shadow: 0 0 0 0 rgba(7, 193, 96, 0.4); }
  70% { box-shadow: 0 0 0 4px rgba(7, 193, 96, 0); }
  100% { box-shadow: 0 0 0 0 rgba(7, 193, 96, 0); }
}

@keyframes warningPulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

@keyframes errorShake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-2px); }
  75% { transform: translateX(2px); }
}

/* Interactive Icon States */
.interactive-icon {
  transition: var(--transition-normal);
  cursor: pointer;
}

.interactive-icon:hover {
  transform: scale(1.1);
  filter: brightness(1.2);
}

.interactive-icon:active {
  transform: scale(0.95);
}

/* Badge Indicators */
.badge-indicator {
  position: relative;
}

.badge-indicator::after {
  content: '';
  position: absolute;
  top: -2px;
  right: -2px;
  width: 6px;
  height: 6px;
  background-color: var(--danger-color);
  border-radius: 50%;
  animation: badgePulse 2s infinite;
}

@keyframes badgePulse {
  0% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.2); opacity: 0.7; }
  100% { transform: scale(1); opacity: 1; }
}

/* Loading State Icons */
.loading-icon {
  animation: loadingSpin 1s linear infinite;
}

@keyframes loadingSpin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* Success State Icons */
.success-icon {
  animation: successBounce 0.6s ease-out;
}

@keyframes successBounce {
  0% { transform: scale(0); }
  50% { transform: scale(1.2); }
  100% { transform: scale(1); }
}

/* Contextual Icon Colors */
.icon-primary { color: var(--primary-color); }
.icon-success { color: var(--success-color); }
.icon-warning { color: var(--warning-color); }
.icon-danger { color: var(--danger-color); }
.icon-secondary { color: var(--text-secondary); }
.icon-tertiary { color: var(--text-tertiary); }

/* Icon Size Variants */
.icon-xs { font-size: 10px; }
.icon-sm { font-size: 12px; }
.icon-md { font-size: 14px; }
.icon-lg { font-size: 16px; }
.icon-xl { font-size: 18px; }
.icon-xxl { font-size: 20px; }
/* ===== SMOOTH TRANSITIONS AND LOADING STATES ===== */
/* Step Content Transitions */
.step-content {
  opacity: 0;
  transform: translateX(20px);
  animation: stepEnter 0.6s ease-out forwards;
}

.step-content--enter {
  animation: stepEnter 0.6s ease-out forwards;
}

.step-content--exit {
  animation: stepExit 0.4s ease-in forwards;
}

@keyframes stepEnter {
  0% {
    opacity: 0;
    transform: translateX(20px);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes stepExit {
  0% {
    opacity: 1;
    transform: translateX(0);
  }
  100% {
    opacity: 0;
    transform: translateX(-20px);
  }
}

/* Step Transition Wrapper */
.step-transition-wrapper {
  animation: fadeInUp 0.8s ease-out;
}

@keyframes fadeInUp {
  0% {
    opacity: 0;
    transform: translateY(30px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Enhanced Upload Progress */
.upload-progress--enhanced {
  background: linear-gradient(135deg, #f0f8ff 0%, #e6f4ff 100%);
  border: 1px solid #b3d9ff;
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  margin: var(--space-md) 0;
  position: relative;
  overflow: hidden;
}

.upload-progress--enhanced::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { left: -100%; }
  100% { left: 100%; }
}

.loading-spinner {
  margin-right: var(--space-sm);
  animation: spinnerBounce 1s ease-in-out infinite;
}

@keyframes spinnerBounce {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.progress-bar {
  width: 100%;
  height: 4px;
  background-color: rgba(25, 137, 250, 0.2);
  border-radius: 2px;
  margin-top: var(--space-sm);
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--primary-color), #0066cc);
  border-radius: 2px;
  animation: progressFill 2s ease-in-out infinite;
}

@keyframes progressFill {
  0% { width: 0%; }
  50% { width: 70%; }
  100% { width: 100%; }
}

/* Card Hover Transitions */
.vehicle-info-card,
.renter-info-card,
.lease-info-card {
  transition: var(--transition-normal);
}

.vehicle-info-card:hover,
.renter-info-card:hover,
.lease-info-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

/* Button Loading States */
.nav-button {
  position: relative;
  overflow: hidden;
}

.nav-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: var(--transition-normal);
}

.nav-button:active::before {
  left: 100%;
  transition: var(--transition-fast);
}

/* Form Field Transitions */
.van-field {
  transition: var(--transition-normal);
}

.van-field:focus-within {
  transform: translateY(-1px);
  box-shadow: var(--shadow-sm);
}

/* Upload Component Transitions */
.van-uploader__upload {
  transition: var(--transition-normal);
}

.van-uploader__upload:hover {
  transform: scale(1.02);
}

.van-uploader__preview {
  transition: var(--transition-normal);
}

.van-uploader__preview:hover {
  transform: scale(1.05);
  z-index: 10;
}

/* Status Transition Effects */
.upload-status {
  animation: statusSlideIn 0.5s ease-out;
}

@keyframes statusSlideIn {
  0% {
    opacity: 0;
    transform: translateY(-10px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Tag Transitions */
.van-tag {
  transition: var(--transition-normal);
}

.van-tag:hover {
  transform: scale(1.05);
}

/* Loading Overlay */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: overlayFadeIn 0.3s ease-out;
}

@keyframes overlayFadeIn {
  0% { opacity: 0; }
  100% { opacity: 1; }
}

.loading-content {
  background-color: var(--bg-primary);
  padding: var(--space-xxl);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-lg);
  text-align: center;
  animation: loadingBounce 0.6s ease-out;
}

@keyframes loadingBounce {
  0% {
    opacity: 0;
    transform: scale(0.8);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

/* Skeleton Loading States */
.skeleton {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeletonLoading 1.5s infinite;
}

@keyframes skeletonLoading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

.skeleton-text {
  height: 16px;
  border-radius: var(--radius-sm);
  margin-bottom: var(--space-sm);
}

.skeleton-text--short {
  width: 60%;
}

.skeleton-text--medium {
  width: 80%;
}

.skeleton-text--long {
  width: 100%;
}

.skeleton-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.skeleton-image {
  width: 100px;
  height: 100px;
  border-radius: var(--radius-lg);
}

/* Micro-interactions */
.micro-bounce {
  animation: microBounce 0.3s ease-out;
}

@keyframes microBounce {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

.micro-shake {
  animation: microShake 0.5s ease-in-out;
}

@keyframes microShake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-2px); }
  75% { transform: translateX(2px); }
}

.micro-glow {
  animation: microGlow 2s ease-in-out;
}

@keyframes microGlow {
  0% { box-shadow: 0 0 0 0 rgba(25, 137, 250, 0.4); }
  70% { box-shadow: 0 0 0 4px rgba(25, 137, 250, 0); }
  100% { box-shadow: 0 0 0 0 rgba(25, 137, 250, 0); }
}

/* Page Transition Effects */
.page-enter {
  animation: pageEnter 0.8s ease-out;
}

@keyframes pageEnter {
  0% {
    opacity: 0;
    transform: translateY(20px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Stagger Animation for Lists */
.stagger-item {
  opacity: 0;
  animation: staggerIn 0.6s ease-out forwards;
}

.stagger-item:nth-child(1) { animation-delay: 0.1s; }
.stagger-item:nth-child(2) { animation-delay: 0.2s; }
.stagger-item:nth-child(3) { animation-delay: 0.3s; }
.stagger-item:nth-child(4) { animation-delay: 0.4s; }
.stagger-item:nth-child(5) { animation-delay: 0.5s; }

@keyframes staggerIn {
  0% {
    opacity: 0;
    transform: translateY(20px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Enhanced Dialog Transitions */
.van-dialog {
  animation: dialogSlideUp 0.4s ease-out;
}

@keyframes dialogSlideUp {
  0% {
    opacity: 0;
    transform: translateY(50px) scale(0.9);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* Popup Transitions */
.van-popup {
  animation: popupSlideUp 0.3s ease-out;
}

@keyframes popupSlideUp {
  0% {
    transform: translateY(100%);
  }
  100% {
    transform: translateY(0);
  }
}

/* Success State Animations */
.success-animation {
  animation: successPulse 0.6s ease-out;
}

@keyframes successPulse {
  0% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(7, 193, 96, 0.7);
  }
  70% {
    transform: scale(1.05);
    box-shadow: 0 0 0 10px rgba(7, 193, 96, 0);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(7, 193, 96, 0);
  }
}

/* Error State Animations */
.error-animation {
  animation: errorShake 0.6s ease-in-out;
}

@keyframes errorShake {
  0%, 100% { transform: translateX(0); }
  10%, 30%, 50%, 70%, 90% { transform: translateX(-3px); }
  20%, 40%, 60%, 80% { transform: translateX(3px); }
}